extends ../layout
block content
  .form
    form(method='post')
      input(type='email', name='user', placeholder='email')
      input(type='text', name='gg', placeholder='gg')
      textarea(name='notes')
      input(type='text', name='username', placeholder='username')
      input(type='text', name='password', placeholder='password')
      select(name='hostname')
        each server in servers
          option(value=server._id) #{server.hostname}
      input(type='number', name='allowedTorrents', placeholder='allowedTorrents')
      input(type='number', name='allowedTransfer', placeholder='allowedTransfer')
      input(type='checkbox', name='allowedVNC', placeholder='allowedVNC')
      input(type='number', name='allowedCapacity', placeholder='allowedCapacity')
      input(type='number', name='price', placeholder='price')
      input(type='date', name='validity')
      input(type='submit', name='OK')

mixin multipartForm(name)
  .form
    p= name
    form(method='post' enctype='multipart/form-data')
      input(type='file' name=name)
      input(type='submit' value='OK')

extends layout
block content
    +multipartForm('mbank')
    +multipartForm('paypal')
    h2= counter
    if transfers
      table
        tr
          th User
          th Data
          th Tytu≈Ç
          th Nadawca
          th Kwota
          each transfer in transfers
            tr(title=transfer.accountNumber)
              td
                select(name='user')
                  option
                  each user in users
                    option(value=user._id) #{user.user}
              td= transfer.date
              td= transfer.title
              td= transfer.sender
              td= transfer.amount
              td: button OK
      script(type='text/javascript', src='/js/add-account-number.js')
